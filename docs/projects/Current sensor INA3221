#include <Wire.h>
#include <Adafruit_INA3221.h>

Adafruit_INA3221 ina3221;

void setup() {
  Serial.begin(9600);
  while (!Serial) {
    delay(10);
  }
  
  if (!ina3221.begin()) {
    Serial.println("No se pudo encontrar el sensor INA3221");
    while (1);
  }
}

void loop() {
  float current_mA = ina3221.getCurrent_mA(1); // leer corriente del canal 1
  Serial.print("Corriente: ");
  Serial.print(current_mA);
  Serial.println(" mA");
  delay(1000);
}
